<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:ES.Tools.Controls">
  <ControlTemplate x:Key="AccordionTemplate" TargetType="{x:Type controls:Accordion}">
    <Border BorderBrush="Gray" BorderThickness="1">
      <StackPanel IsItemsHost="True" Orientation="{TemplateBinding Orientation}" />
    </Border>
  </ControlTemplate>

  <Style TargetType="{x:Type controls:Accordion}">
    <Setter Property="Template" Value="{StaticResource AccordionTemplate}" />
    <Setter Property="UseLayoutRounding" Value="true" />
  </Style>
</ResourceDictionary>